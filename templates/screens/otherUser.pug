html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous")
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')
    style
        include ../../stylesheets/index.css
        include ../../stylesheets/user.css


    title User Page
    body
        include ../partials/navbar
        div.container.mt-5
            h1.mb-5 #{user.username}
            if user.contributor
                h1.mb-5 Contributing User
            else
                h1.mb-5 Regular User

            if !following
                div(id="follow")
                    form(action=`/users/followUser/${user._id}`, method='POST')
                        button.btn.btn-primary.mt-2.ms-3(type="submit") Follow
            else
                div(id="unfollow")
                    form(action=`/users/unfollowUser/${user._id}`, method='POST')
                        button.btn.btn-danger.mt-2.ms-3(name="from" value="other" type="submit") Unfollow

            div.mt-5(id="PersonFollowDiv")
                p People Following:
                ul.list-group
                    each person in peopleFollowing
                        li.list-group-item
                            a(href=`/people/${person.id}`) #{person.name}


            div.mt-5(id="MoviesWatchedDiv")
                p Movies watched:
                ul.list-group
                    each movie in moviesWatched
                        li.list-group-item
                            a(href=`/movies/${movie.id}`) #{movie.Title}

            div.mt-5(id="ReviewsWrittenDiv")
                p Reviews Written:
                ul.list-group
                    each review in reviews
                        li.list-group-item
                            a(href=`/movies/${review.movie}/reviews/${review.id}`) #{review.summaryText}
                a(href=seeReviewsURL) see All Reviews
