html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous")
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')


    title User Page
    body
        include ./navbar.pug

        div.container.mt-5
            h1.mb-5 #{user.username}

            div(id="AccountTypeDiv")
                p Account Type:
                -let contributorType = user.accountType === "contributor"
                -let regularType = user.accountType === "regular"
                div.form-check.ms-4
                    input.form-check-input(type="radio" name="accountTypeRadio" id="1" checked={contributorType})
                    label.form-check-label(for="radContributor") Contributor
                div.form-check.ms-4
                    input.form-check-input(type="radio" name="accountTypeRadio" id="2" checked = {regularType})
                    label.form-check-label(for="radRegular") Regular
                button.btn.btn-primary.mt-2.ms-3 Save

            div.mt-5(id="PersonFollowDiv")
                p People Following:
                ul.list-group.list-group-flush
                    each person in user.peopleFollowing
                        li.list-group-item.me-auto(style="none")
                            button.btn.btn-danger.me-3 Unfollow
                            a(href="") #{person.name}

            div.mt-5(id="UsersFollowingDiv")
                p Users Following:
                ul.list-group.list-group-flush
                    each mUser in user.usersFollowing
                        li.list-group-item.me-auto
                            button.btn.btn-danger.me-3 Unfollow
                            a(href="") #{mUser.username}

            div.mt-5(id="MoviesWatchedDiv")
                p Movies you've watched:
                ul.list-group.list-group-flush
                    each movie in user.moviesWatched
                        li.list-group-item.me-auto
                            button.btn.btn-danger.me-3 Remove
                            a(href="") #{movie.name}

            div.mt-5(id="RecommendedDiv")
                p Recommended Movies:
                ul.list-group.list-group-flush
                    each movie in user.recommendedMovies
                        li.list-group-item.me-auto
                            a(href="") #{movie.name}

            div.mt-5(id="NotificationsDiv")
                p Notifications:
                ul.list-group.list-group-flush
                    each notif in user.notifications
                        li.list-group-item.me-auto
                            a(href="") #{notif.text}
