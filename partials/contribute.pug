html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous")
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')

    style
        include ../stylesheets/index.css


    title Contribute Page
    body
        include ./navbar.pug

        div.container
            h1.display-5.mt-3 Contribute:
            hr
            form(action="/addPerson" method="POST")
                h2 Add a Person:
                label.form-label.text-white(for="inputActorName") Person Name
                input.form-control.mb-3(type="text" id="inputActorName" name="personName")

                button.btn.btn-outline-primary.mt-3(type="submit") Add Person
            form.mt-5
                h2 Add a Movie:

                label.form-label.text-white(for="inputTitle") Title
                input.form-control.mb-3(type="text" name="title" id="inputTitle")

                label.form-label.text-white(for="inputRuntime") Runtime
                input.form-control.mb-3(type="text" name="runtime" id="inputRuntime")

                label.form-label.text-white(for="inputReleaseYear") Release Year
                input.form-control.mb-3(type="text" name="releaseYear" id="inputReleaseYear")

                label.form-label.text-white(for="inputWriters") Writers
                input.form-control.mb-3(type="text" name="writers" id="inputWriters")

                label.form-label.text-white(for="inputDirectors") Directors
                input.form-control.mb-3(type="text" name="directors" id="inputDirectors")

                label.form-label.text-white(for="inputActors") Actors
                input.form-control.mb-3(type="text" name="actors" id="inputActors")

                button.btn.btn-outline-primary.btn.mt-3 Add Movie
