html
    head
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous")
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')

    style
        include ../stylesheets/index.css

    script
        include ../scripts/contribute.js

    title Contribute Page
    body
        include ./navbar.pug

        div.container
            h1.display-5.mt-3 Contribute:
            hr
            form(action="/people/addPerson" method="POST")
                h2 Add a Person:
                label.form-label.text-white(for="inputActorName") Person Name
                input.form-control.mb-3(type="text" id="inputActorName" name="personName")

                button.btn.btn-outline-primary.mt-3(type="submit") Add Person
            form.mt-5
                h2 Add a Movie:

                label.form-label.text-white(for="inputTitle") Title
                input.form-control.mb-3(type="text" name="title" id="inputTitle")

                label.form-label.text-white(for="inputRuntime") Runtime
                input.form-control.mb-3(type="text" name="runtime" id="inputRuntime")

                label.form-label.text-white(for="inputReleaseYear") Release Year
                input.form-control.mb-3(type="text" name="releaseYear" id="inputReleaseYear")

                label.form-label.text-white(for="writersAutoList") Writers
                input.form-control.mb-3(list="writersAutoList" type="search" placeholder="Writer Name" aria-label="Search" name="actorName" onkeypress="personSelectKeyPress(1)" autocomplete="off")#writerNameSearch
                datalist#writersAutoList

                label.form-label.text-white(for="directorsAutoList") Directors
                input.form-control.mb-3(list="directorsAutoList" type="search" placeholder="Director Name" aria-label="Search" name="actorName" onkeypress="personSelectKeyPress(2)" autocomplete="off")#directorNameSearch
                datalist#directorsAutoList

                label.form-label.text-white(for="actorAutoList") Actors
                input.form-control.mb-3(list="actorAutoList" type="search" placeholder="Actor Name" aria-label="Search" name="actorName" onkeypress="personSelectKeyPress(3)" autocomplete="off")#actorNameSearch
                datalist#actorAutoList

                button.btn.btn-outline-primary.btn.mt-3(onClick=sendMovieData) Add Movie
